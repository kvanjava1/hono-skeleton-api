# ====================
# Application
# ====================
PORT=8080
NODE_ENV=development

# ====================
# Database Toggles (true/false)
# ====================
DB_MONGO_ENABLED=false
DB_MYSQL_ENABLED=true
DB_PG_ENABLED=true
DB_SQLITE_ENABLED=true
DB_REDIS_ENABLED=true

# ====================
# Redis Configuration
# ====================
REDIS_HOST=172.17.0.1
REDIS_PORT=6379

# ====================
# Queue Configuration
# ====================
QUEUE_CONCURRENCY=5
QUEUE_REMOVE_ON_COMPLETE=true
QUEUE_REMOVE_ON_FAIL=100

# ====================
# MongoDB Configuration
# ====================
MONGO_HOST=172.17.0.1
MONGO_PORT=27017
MONGO_DB_NAME=myapp

# ====================
# MySQL Configuration
# ====================
MYSQL_HOST=172.17.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=rootadmin
MYSQL_DATABASE=myapp

# ====================
# PostgreSQL Configuration
# ====================
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=
PG_DATABASE=myapp

# ====================
# SQLite Configuration
# ====================
SQLITE_DB_PATH=./storages/database/sqlite/dev.db

# ====================
# Rate Limiter
# ====================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ====================
# CORS
# ====================
CORS_ORIGIN=*

# ====================
# JWT Configuration
# ====================
JWT_SECRET=your-super-secret-key
JWT_EXPIRES_IN=1h
